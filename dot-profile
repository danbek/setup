# -*-Shell-script-*-
# This file is not read by bash(1), if ~/.bash_profile or ~/.bash_login
# exists.
if [ `uname -s` = "Darwin" ]; then
    # following for macports
    export PATH=/opt/local/bin:/opt/local/sbin:$PATH
    export MANPATH=/opt/local/share/man:$MANPATH
fi

prepend_to_path() {
    if [ -d "$1" ] ; then
        PATH="$1:$PATH"
    fi
}

add_to_path() {
    if [ -d "$1" ] ; then
        PATH="$PATH:$1"
    fi
}

# if running bash
if [ -n "$BASH_VERSION" ]; then
    # include .bashrc if it exists
    if [ -f "$HOME/.bashrc" ]; then
        . "$HOME/.bashrc"
    fi
fi

umask 022

# OPAM configuration
. $HOME/.opam/opam-init/init.sh > /dev/null 2> /dev/null || true

prepend_to_path "$HOME/anaconda2/bin"
add_to_path "$HOME/bin"
add_to_path "/usr/local/Trolltech/Qt-4.8.6/bin"
add_to_path "/usr/local/texlive/2015/bin/x86_64-linux"
add_to_path "$HOME/Downloads/fasthenry-3.0wr/bin"
add_to_path "$HOME/Downloads/pycharm-community-2016.1.3/bin"
